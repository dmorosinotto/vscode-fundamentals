{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "tslint",
            "type": "shell",
            "command": "node_modules/.bin/tslint",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "args": [
                "--project",
                "${workspaceRoot}"
            ],
            "problemMatcher": {
                "owner": "ts",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "(\\w+):\\s+([\/\\w\\-\\.]+)\\[([0-9]+),\\s*([0-9]+)\\]\\:\\s*(.*)",
                    "severity": 1,
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "message": 5
                }
            }
        }
    ]
}